name: Deploy to GitHub Pages

on:
  push:
    branches: [ "master" ]
  pull_request:
    branches: [ "master" ]
  workflow_dispatch:

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Check out the repository
        uses: actions/checkout@v4

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '14'  # Ou a versão do Node.js que você está usando

      - name: Install dependencies
        run: npm install  # Ou o comando necessário para instalar as dependências do seu projeto

      - name: Build the project
        run: npm run build  # Ou o comando necessário para construir o seu projeto

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./docs/brownser  # Diretório que contém os arquivos a serem publicados
